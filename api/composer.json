{
  "name": "root/app",
  "type": "project",
  "authors": [
    {
      "name": "Alex"
    }
  ],
  "require": {
    "php": "^7.4",
    "slim/slim": "^4.12",
    "slim/psr7": "^1.6",
    "php-di/php-di": "^6.4",
    "symfony/console": "^5.4"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "tests/"
    }
  },
  "require-dev": {
    "overtrue/phplint": "^3.4",
    "vimeo/psalm": "^5.17",
    "phpunit/phpunit": "^9.6",
    "friendsofphp/php-cs-fixer": "^3.40"
  },
  "scripts": {
    "lint": "phplint",
    "php-cs-fixer": "vendor/bin/php-cs-fixer --config=.php-cs-fixer.php --allow-risky=yes",
    "psalm": "psalm",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-html var/test/coverage",
    "app": "php bin/app.php --ansi"
  }
}
