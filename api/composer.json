{
  "name": "root/app",
  "type": "project",
  "authors": [
    {
      "name": "Alex"
    }
  ],
  "require": {
    "php": "^7.4",
    "slim/slim": "^4.12",
    "slim/psr7": "^1.6",
    "php-di/php-di": "^6.4",
    "symfony/console": "^5.4"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "require-dev": {
    "overtrue/phplint": "^3.4",
    "squizlabs/php_codesniffer": "^3.7",
    "vimeo/psalm": "^5.17"
  },
  "scripts": {
    "lint": "phplint",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "psalm": "psalm",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-html var/test/coverage",
    "app": "php bin/app.php --ansi"
  }
}
